<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostDetailsActivity">

    <ImageView
        android:id="@+id/ivDetailsUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDetailUsername"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/ivDetailsUser"
        android:textSize="34sp"
        tools:text="Michelle" />

    <ImageView
        android:id="@+id/ivDetailsAlbum"
        android:layout_width="291dp"
        android:layout_height="271dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="45dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvDetailsCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDetailsUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        tools:text="Hi this is my caption!" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDetailUsername"
        android:layout_alignTop="@+id/ivDetailsUser"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivPlayDetails"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/ivDetailsAlbum"
        android:layout_below="@+id/tvDetailsCaption"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="379dp"
        app:srcCompat="@android:drawable/ic_media_play" />
</RelativeLayout>