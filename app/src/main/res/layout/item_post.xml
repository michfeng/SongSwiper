<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <ImageView
        android:id="@+id/itemProfile"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.like.LikeButton
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemUsername"
        android:layout_alignStart="@+id/itemUsername"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        app:icon_size="7dp"
        app:icon_type="heart" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemProfile"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/itemProfile"
        tools:text="Michelle just liked a song!" />

    <TextView
        android:id="@+id/itemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemProfile"
        android:layout_alignStart="@+id/itemProfile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:text="michfeng" />

    <ImageView
        android:id="@+id/itemAlbum"
        android:layout_width="68dp"
        android:layout_height="92dp"
        android:layout_below="@+id/itemDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>